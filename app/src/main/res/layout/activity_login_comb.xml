            <Button
                android:id="@+id/emailSignInButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="custom_login_button"
                android:text="@string/sign_in"
                android:textColor="#000000" />

            <Button
